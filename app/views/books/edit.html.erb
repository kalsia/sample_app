<% provide(:title, 'New Book') %>
<h1>Edit your book</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@book) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :author %>
      <%= f.text_field :author %>

      <%= f.label :publisher %>
      <%= f.text_field :publisher %>

      <%= f.label :release_date %>
      <%= f.date_select(:release_date, options = { order: [:month, :day, :year], prompt: { month: 'Select Month', day: 'Select Day', year: 'Select Year' }, start_year: 1950 }, html_options = { size: 1 }) %>

      <%= f.label :n_pages %>
      <%= f.number_field :n_pages, :min => 1, :value => 1 %>

      <%= f.label :image_url %>
      <%= f.url_field :image_url %>

      <%= f.label :isbn %>
      <%= f.text_field :isbn %>

      <%= f.text_area :description, placeholder: "Insert book description here..." %>

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
      <%= link_to 'Back', "/", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>